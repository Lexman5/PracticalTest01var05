<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView pentru afisarea textului selectat -->
    <TextView
        android:id="@+id/text_view_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Select a position"
        android:editable="false"
        android:textSize="18sp"/>

    <!-- GridLayout pentru butoane -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal">

        <!-- Butonul Top Left -->
        <Button
            android:id="@+id/button_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="TOP LEFT" />

        <!-- Spațiu gol pentru poziționare -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1" />

        <!-- Butonul Top Right -->
        <Button
            android:id="@+id/button_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="TOP RIGHT" />

        <!-- Butonul Center -->
        <Button
            android:id="@+id/button_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="CENTER" />

        <!-- Butonul Bottom Left -->
        <Button
            android:id="@+id/button_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="BOTTOM LEFT" />

        <!-- Spațiu gol pentru poziționare -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1" />

        <!-- Butonul Bottom Right -->
        <Button
            android:id="@+id/button_bottom_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="BOTTOM RIGHT" />
    </GridLayout>

    <!-- Buton pentru navigare -->
    <Button
        android:id="@+id/button_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="NAVIGATE TO SECONDARY ACTIVITY"
        android:layout_marginTop="20dp"/>

</LinearLayout>
